@model CW_SITAIRIS.Models.Order

@{
    ViewData["Title"] = "Изменение";
}

<h2>Изменение</h2>

<h4>Заказ № @Model.orderId от @Model.dateOpened.Date</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="orderId" />
            <div class="form-group">
                <label  class="control-label">Номер авто</label>
                <input asp-for="carId" class="form-control" />
                <span asp-validation-for="carId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Номер клиента</label>
                <input asp-for="clientId" class="form-control" />
                <span asp-validation-for="clientId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label">Дата создания заказа</label>
                <input asp-for="dateOpened" class="form-control" disabled="disabled"/>
                <span asp-validation-for="dateOpened" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата выдачи авто</label>
                <input asp-for="dateClosed" class="form-control" />
                <span asp-validation-for="dateClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку заказов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
