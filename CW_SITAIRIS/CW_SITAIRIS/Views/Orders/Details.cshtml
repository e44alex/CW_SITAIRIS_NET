@using CW_SITAIRIS.Controllers
@using CW_SITAIRIS.Controllers.LoginController
@using CW_SITAIRIS.Models.AppDBContext
@using SQLitePCL
@model CW_SITAIRIS.Models.OrderInfo

@{
    ViewData["Title"] = "Подробности";



}

<h2>Информация о заказе</h2>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Авто
        </dt>
        <dd>
            @Html.DisplayFor(model => model.carName)
        </dd>
        <dt>
          Покупатель
        </dt>
        <dd>
            @Html.DisplayFor(model => model.clientName)
        </dd>
        <dt>
            Дата создания заказа
        </dt>
        <dd>
            @Html.DisplayFor(model => model.dateOpened)
        </dd>
        <dt>
            Дата выдачи автомобиля
        </dt>
        <dd>
            @Html.DisplayFor(model => model.dateClosed)
        </dd>
    </dl>
</div>
<div>
    @if (AccountController.status > 0)
    {
        <a asp-action="Edit" asp-route-id="@Model.orderId">Изменить</a>
    }
    <a asp-action="Index">Назад к списку</a>
</div>
