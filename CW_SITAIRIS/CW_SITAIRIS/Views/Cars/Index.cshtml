@using CW_SITAIRIS.Controllers.LoginController
@model IEnumerable<CW_SITAIRIS.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (AccountController.status >= 1)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@*Image label*@</th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.engine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.built)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.warehouseId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
                <td>
                    <img src="~/images/@item.picture" alt="@item.mark" width="250" height="auto" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.engine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.built)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.warehouseId)
                </td>
                <td>
                    @if (AccountController.status >= 1)
                    {
                        <a asp-action="Edit" asp-route-id="@item.idCar">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.idCar">Delete</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.idCar">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
