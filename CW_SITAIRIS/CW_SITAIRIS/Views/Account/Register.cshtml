@model CW_SITAIRIS.Models.RegisterModel.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true"  style="width: 25%">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label class="control-label" asp-for="Email">Введите Email</label><br />
            <input  class="form-control"  type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label class="control-label" asp-for="Password">Введите пароль</label><br />
            <input  class="form-control"  asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label class="control-label" asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input  class="form-control"  asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <br />
            <input class="btn btn-primary " type="submit" value="Регистрация"/>
        </div>
    </div>
</form>