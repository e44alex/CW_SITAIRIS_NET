@model CW_SITAIRIS.Models.RegisterModel.LoginModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

    
<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="width: 25%" >
    <div asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label class="control-label" asp-for="Email">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <span class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-primary" />
            <a class="btn-outline-secondary" asp-action="Register" asp-controller="Account">Регистрация</a>
        </span>
    </div>
</form>

